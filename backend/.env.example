# App
APP_NAME="Laravel AI"
APP_ENV=development
DEBUG=true
API_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/laravelai

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# GitHub OAuth
# Create at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:8000/api/v1/auth/github/callback

# Anthropic
ANTHROPIC_API_KEY=sk-ant-xxxxx
CLAUDE_INTENT_MODEL=claude-haiku-4-5-20251001
CLAUDE_EXECUTION_MODEL=claude-sonnet-4-5-20250929

# Qdrant Cloud
# Get from: https://cloud.qdrant.io
QDRANT_URL=https://xxx.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION=laravel_code

# OpenAI (for embeddings)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxx
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Voyage AI (alternative embeddings provider)
# Get from: https://dash.voyageai.com/
VOYAGE_API_KEY=pa-xxxxx
VOYAGE_EMBEDDING_MODEL=voyage-code-3

# Embedding provider: "openai" or "voyage"
EMBEDDING_PROVIDER=openai

# Frontend
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=INFO
LOG_DIR=  # Empty for console only, set path for file logging (e.g., /var/log/laravelai)
LOG_JSON=false  # Set to true for JSON logs in production

# ===========================================
# Advanced Features (Production Optimizations)
# ===========================================

# Batch Processing (50% cost savings for bulk operations)
BATCH_PROCESSING_ENABLED=true
BATCH_MAX_SIZE=100
BATCH_POLL_INTERVAL_SECONDS=5

# Prompt Caching (90% cost reduction on cache hits)
PROMPT_CACHING_ENABLED=true
PROMPT_CACHE_MIN_TOKENS=1024

# Subagents (Specialized AI agents for specific tasks)
SUBAGENTS_ENABLED=true
SUBAGENTS_ENABLE_CACHING=true

# Hooks (Control and audit logging)
HOOKS_ENABLED=true
HOOKS_AUDIT_LOG_ENABLED=true
HOOKS_MAX_AUDIT_ENTRIES=10000
HOOKS_DEFAULT_USER_DAILY_BUDGET=10.0  # $10/day per user

# Session Management (Conversation continuity)
SESSIONS_ENABLED=true
SESSIONS_STORAGE_DIR=/tmp/laravelai_sessions
SESSIONS_DEFAULT_TTL_HOURS=24
SESSIONS_MAX_MESSAGES=100

# Multilingual Support (15+ languages)
MULTILINGUAL_ENABLED=true
MULTILINGUAL_DEFAULT_LANGUAGE=en
MULTILINGUAL_AUTO_DETECT=true
MULTILINGUAL_TRANSLATE_RESPONSES=false  # Set to true to auto-translate responses

# Structured Outputs (Guaranteed JSON response formats)
STRUCTURED_OUTPUTS_ENABLED=true
STRUCTURED_OUTPUTS_STRICT_VALIDATION=true